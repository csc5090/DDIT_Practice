<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
    version="6.0">
    
    <!-- 자카르타,톰캣11 버전에 맞추어 xml을 수정함. sts가 기본으로 제공하던 2.4버전 삭제. -->
    <!-- Jakarta JSTL 3.0.x에 맞는 인덱스 셋팅. -->
    
    <welcome-file-list>
		<welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <!-- 세션 유지 시간 설정.-->
    <session-config>
        <session-timeout>120</session-timeout>
    </session-config>
    
     <servlet>
       <servlet-name>FrontController</servlet-name>
       <servlet-class>com.our_middle_project.frontcontroller.FrontController</servlet-class>
    </servlet>
    
    <servlet-mapping>
       <servlet-name>FrontController</servlet-name>
       <url-pattern>*.do</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/our_middle_project_view/error.jsp</location>
    </error-page>
    
     <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/our_middle_project_view/error.jsp</location>
    </error-page>
    
    
</web-app>